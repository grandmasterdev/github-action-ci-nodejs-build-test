{
  "name": "ci-nodejs-build-test",
  "version": "1.0.0",
  "description": "Build and test action for nodejs CI",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --collectCoverage",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "lint": "eslint --fix",
    "prettier:format": "prettier --write src/**/*.ts"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint"
    ],
    "*.{json,md,html,ts,js}": [
      "npm run prettier:format"
    ]
  },
  "prepare": [
    "npx husky install"
  ],
  "keywords": [
    "nodejs",
    "CI",
    "build",
    "test",
    "github",
    "action"
  ],
  "author": "grandmasterdev",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "esbuild": "^0.16.16",
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1"
  }
}
